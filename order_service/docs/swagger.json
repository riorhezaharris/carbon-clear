                    },
                    {
                        "type": "integer",
                        "description": "Month (1-12)",
                        "name": "month",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Monthly report",
                        "schema": {
                            "$ref": "#/definitions/models.MonthlyReport"
                        }
                    },
                    "400": {
                        "description": "Invalid year or month",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
